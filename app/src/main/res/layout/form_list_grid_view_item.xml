<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="2dp"
    app:cardElevation="2dp"
    app:cardPreventCornerOverlap="false"
    app:contentPadding="0dp"
    android:layout_marginBottom="10dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp">

        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/grid_item_nameTxt"
            android:textSize="22sp"
            android:textColor="@color/colorPrimaryDark"
            android:text="@string/name_placeholder_item_list"
            />

        <View
            android:id="@+id/grid_item_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/grid_item_nameTxt"
            android:background="#707070"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/firstLinearLayout"
            android:layout_below="@id/grid_item_line"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:id="@+id/grid_item_districtTxt"
                android:layout_marginTop="10dp"
                android:textColor="@color/black"
                android:text="@string/name_district_item_list"
                />

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:id="@+id/grid_item_districtAnswerTxt"
                android:layout_marginTop="10dp"
                android:textColor="@color/colorPrimaryDark"
                android:text="@string/name_placeholder_text"
                />

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:id="@+id/grid_item_photoTxt"
                android:layout_marginTop="10dp"
                android:textColor="@color/black"
                android:text="@string/photo_item_list"
                />

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:id="@+id/grid_item_photoAnswerTxt"
                android:layout_marginTop="10dp"
                android:textColor="@color/colorPrimaryDark"
                android:text="@string/name_placeholder_text"
                />
        </LinearLayout>
    </RelativeLayout>


</android.support.v7.widget.CardView>