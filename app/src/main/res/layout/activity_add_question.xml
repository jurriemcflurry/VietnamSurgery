<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/questionNameLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/questionNameEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/questionName"/>

    </android.support.design.widget.TextInputLayout>

    <Spinner
        android:id="@+id/questionTypeSpinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:spinnerMode="dropdown"
        android:layout_below="@id/questionNameLayout"/>

    <LinearLayout
        android:id="@+id/optionsLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/questionTypeSpinner"
        android:visibility="gone">

    </LinearLayout>

    <android.support.v7.widget.AppCompatCheckBox
        android:id="@+id/requiredCheckbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/required"
        android:layout_below="@id/optionsLayout"/>

    <Button
        android:id="@+id/addQuestionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/requiredCheckbox"
        android:background="@drawable/mybutton"
        android:textColor="@color/white"
        android:text="@string/addQuestionButton"
        android:layout_centerHorizontal="true"
        android:padding="10dp"/>

</RelativeLayout>